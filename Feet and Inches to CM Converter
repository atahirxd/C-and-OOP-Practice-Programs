#include<iostream>
using namespace std;
void main() {
	float feet, inch, length, cm;
	cout << "Enter length in feet:\n";	//enter length
	cin >> feet;
	cout << "Enter inches:\n";		//enter inches
	cin >> inch;
	length = feet * 12 + inch;		//convert to inches
	cout << "Total inches are: " << length;
	cm = length *2.54;
	cout << "\nThe total length in centimetres is: " << cm;
	cout << "\n";
	system("PAUSE");
}
